/ {
    aliases {
        led0 = &user_led;
        led1 = &ext_led;
        sw0 = &user_button;
    };

    leds {
        compatible = "gpio-leds";

        /* Built-in green LED on PB14 */
        user_led: led_0 {
            gpios = <&gpiob 14 GPIO_ACTIVE_HIGH>;
            label = "USER_LED";
        };

        /* External LED on PA5 (Arduino D13 pin) */
        ext_led: led_1 {
            gpios = <&gpioa 5 GPIO_ACTIVE_HIGH>;
            label = "EXT_LED";
        };
    };

    buttons {
        compatible = "gpio-keys";

        /* User button on PC13, with pull-up and active low */
        user_button: button_0 {
            gpios = <&gpioc 13 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
            label = "USER_BUTTON";
        };
    };
};
